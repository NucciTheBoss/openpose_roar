Bootstrap: docker
From: nvidia/cuda:10.2-cudnn7-devel-ubuntu18.04

%labels
    Author: Jason C. Nucciarone
    Maintainer: Jason C. Nucciarone
    Owner: Jason C. Nucciarone
    Version: v1.0
    Contributors: Andrew Polaskey, Daniel Albohn

%post
    ## Update repository list
    apt-get update -y
    export DEBIAN_FRONTEND=noninteractive

    ## Install my essentials
    apt-get install -y --no-install-recommends \
        python3-dev python3-pip git g++ wget make cmake \
        libprotobuf-dev protobuf-compiler \
        libopencv-dev libgoogle-glog-dev \
        libboost-all-dev \
        libhdf5-dev libatlas-base-dev \
        software-properties-common unzip

    ## Install required python packages
    pip3 install setuptools
    pip3 install numpy opencv-python

    ## Install neccessary Nvidia drivers
    add-apt-repository -y ppa:graphics-drivers/ppa
    apt-get install -y nvidia-390-dev

    ## Clone openpose repository
    git clone https://github.com/CMU-Perceptual-Computing-Lab/openpose
    cd openpose/
    git submodule update --init --recursive --remote
    
    ## Install Caffe
    bash ./scripts/ubuntu/install_deps.sh

    ## Build openpose
    mkdir build
    cd build
    cmake \
      -DCMAKE_BUILD_TYPE="Release" \
      -DBUILD_CAFFE=ON \
      -DBUILD_EXAMPLES=ON \
      -DDOWNLOAD_BODY_25_MODEL=ON \
      -DDOWNLOAD_BODY_COCO_MODEL=ON \
      -DDOWNLOAD_BODY_MPI_MODEL=ON \
      -DDOWNLOAD_HAND_MODEL=ON \
      -DBUILD_PYTHON=ON ..
    make all -j $(nproc)

%environment
    export DEBIAN_FRONTEND=noninteractive

%help
    If you have any questions or issues regarding
    the use of this container then please contact
    the ICDS-iASK center at iask@ics.psu.edu
